{
    "version": "0.15.0",
    "build": "local-dev",
    "env": "dev",
    "debug": true,
    "composer": {
        "domain": "",
        "route": "/concierge",
        "protocol": "https:",
        "use_domain": true,
        "local_login": false
    },
    "app": {
        "title": "ACA Projects",
        "name": "ACA Projects",
        "description": "ACA Projects Staff Application made in Angular 5+",
        "short_name": "ACA",
        "code": "ACA",
        "login": {
            "forgot": false
        },
        "analytics": {
            "enabled": false,
            "tracking_id": ""
        },
        "logo": {
            "type": "img",
            "src": "assets/img/logo-inverse.svg",
            "inverse": "assets/img/logo.svg",
            "background": "#082042"
        },
        "users": {
            "visitors": true
        },
        "breakdown": false,
        "menu": {
            "list": [
                {
                    "id": "day-view",
                    "name": "Day View",
                    "icon": {
                        "class": "custom-day",
                        "value": ""
                    }
                },
                {
                    "id": "week-view",
                    "name": "Week View",
                    "icon": {
                        "class": "material-icons",
                        "value": "date_range"
                    }
                },
                {
                    "id": "visitor-list",
                    "name": "Visitor List",
                    "icon": {
                        "class": "custom-visitor",
                        "value": ""
                    }
                },
                {
                    "id": "catering",
                    "name": "Catering",
                    "icon": {
                        "class": "material-icons",
                        "value": "room_service"
                    }
                },
                {
                    "id": "reports",
                    "name": "Reports",
                    "icon": {
                        "class": "material-icons",
                        "value": "warning"
                    }
                }
            ]
        },
        "notifications": {
            "enabled": false,
            "list": [
                {
                    "id": "catering",
                    "name": "New Bookings with Catering"
                },
                {
                    "id": "parking",
                    "name": "New Bookings with Parking"
                },
                {
                    "id": "not_confirmed",
                    "name": "Meetings with catering not confirmed with less than 48 hours to go"
                }
            ]
        },
        "day_view": {
            "has_approvals": true
        },
        "booking": {
            "min_attendees": 0,
            "search_host": true,
            "fields": [
                {
                    "key": "date",
                    "label": "Date",
                    "control_type": "custom",
                    "required": true,
                    "readonly_edit": true
                },
                {
                    "key": "start",
                    "label": "Time",
                    "control_type": "custom",
                    "required": true,
                    "readonly_edit": true
                },
                {
                    "key": "duration",
                    "label": "Duration",
                    "control_type": "custom",
                    "required": true,
                    "readonly_edit": true
                },
                {
                    "key": "host",
                    "label": "Meeting Host",
                    "flex": true,
                    "control_type": "custom",
                    "no_edit": true
                },
                {
                    "key": "attendees",
                    "label": "Attendees",
                    "flex": true,
                    "control_type": "custom",
                    "no_edit": true
                },
                {
                    "key": "title",
                    "label": "Meeting Subject",
                    "control_type": "input",
                    "required": true,
                    "no_edit": true
                },
                {
                    "key": "needs_catering",
                    "label": "Need Catering?",
                    "flex": true,
                    "type": "checkbox",
                    "no_edit": true
                },
                {
                    "key": "expected_attendees",
                    "label": "Expected attendees",
                    "hide": true,
                    "type": "custom"
                },
                {
                    "key": "all_day",
                    "label": "All Day Booking",
                    "hide": true,
                    "type": "checkbox"
                },
                {
                    "key": "notify_users",
                    "label": "Guest Notifyees",
                    "simple": false,
                    "hide": true,
                    "control_type": "select",
                    "no_edit": true
                },
                {
                    "key": "booking_type",
                    "label": "Booking Type",
                    "simple": false,
                    "type": "custom",
                    "default": "internal",
                    "metadata": {
                        "options": [
                            {
                                "id": "internal",
                                "name": "Internal (default)"
                            },
                            {
                                "id": "client",
                                "name": "Client"
                            },
                            {
                                "id": "external",
                                "name": "External"
                            },
                            {
                                "id": "interview",
                                "name": "Interview"
                            },
                            {
                                "id": "setup",
                                "name": "Setup"
                            },
                            {
                                "id": "training",
                                "name": "Training"
                            }
                        ]
                    }
                },
                {
                    "key": "description",
                    "label": "Meeting Notes",
                    "simple": false,
                    "control_type": "custom",
                    "flex": true,
                    "no_edit": true
                },
                {
                    "key": "private_notes",
                    "label": "Private Notes",
                    "description": "",
                    "control_type": "custom",
                    "flex": true,
                    "edit_only": true
                }
            ]
        }
    },
    "mock": false
}
