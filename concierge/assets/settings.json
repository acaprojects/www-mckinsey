{
    "version": "0.15.0",
    "build": "local-dev",
    "env": "prod",
    "debug": true,
    "composer": {
        "domain": "",
        "route": "/concierge",
        "protocol": "https:",
        "use_domain": true,
        "local_login": false
    },
    "app": {
        "title": "ACA Projects",
        "name": "ACA Projects",
        "description": "ACA Projects Staff Application made in Angular 5+",
        "short_name": "ACA",
        "code": "ACA",
        "login": {
            "forgot": false
        },
        "analytics": {
            "enabled": false,
            "tracking_id": ""
        },
        "logo": {
            "type": "img",
            "src": "assets/img/logo-inverse.svg",
            "inverse": "assets/img/logo.svg",
            "background": "#082042"
        },
        "users": {
            "visitors": true
        },
        "breakdown": false,
        "menu": {
            "list": [
                {
                    "id": "day-view",
                    "name": "Day View",
                    "icon": {
                        "class": "custom-day",
                        "value": ""
                    }
                },
                {
                    "id": "week-view",
                    "name": "Week View",
                    "icon": {
                        "class": "material-icons",
                        "value": "date_range"
                    }
                },
                {
                    "id": "visitor-list",
                    "name": "Visitor List",
                    "icon": {
                        "class": "custom-visitor",
                        "value": ""
                    }
                },
                {
                    "id": "reports",
                    "name": "Reports",
                    "icon": {
                        "class": "custom-reports",
                        "value": ""
                    }
                },
                {
                    "id": "notifications",
                    "name": "Notifications",
                    "icon": {
                        "class": "material-icons",
                        "value": "new_releases"
                    },
                    "count": "unread"
                }
            ]
        },
        "notifications": {
            "enabled": true,
            "list": [
                {
                    "id": "catering",
                    "name": "New Bookings with Catering"
                },
                {
                    "id": "parking",
                    "name": "New Bookings with Parking"
                },
                {
                    "id": "not_confirmed",
                    "name": "Meetings with catering not confirmed with less than 48 hours to go"
                }
            ]
        },
        "day_view": {
            "has_approvals": true
        },
        "booking": {
            "min_attendees": 0,
            "search_host": true,
            "fields": [
                {
                    "key": "date",
                    "label": "Date",
                    "simple": true,
                    "description": "",
                    "control_type": "custom",
                    "required": true
                },
                {
                    "key": "period",
                    "control_type": "group",
                    "children": [
                        {
                            "key": "start",
                            "label": "Time",
                            "refs": [
                                "date"
                            ],
                            "simple": true,
                            "description": "",
                            "control_type": "custom",
                            "required": true
                        },
                        {
                            "key": "duration",
                            "label": "Duration",
                            "refs": [
                                "date"
                            ],
                            "simple": true,
                            "description": "",
                            "control_type": "custom",
                            "required": true
                        }
                    ]
                },
                {
                    "key": "host",
                    "label": "Meeting Host",
                    "flex": true,
                    "simple": false,
                    "control_type": "custom"
                },
                {
                    "key": "room",
                    "label": "Space",
                    "description": "",
                    "control_type": "select",
                    "required": true
                },
                {
                    "key": "attendees",
                    "label": "Attendees",
                    "flex": true,
                    "control_type": "custom"
                },
                {
                    "key": "title",
                    "label": "Meeting Subject",
                    "control_type": "text",
                    "required": true
                },
                {
                    "key": "description",
                    "label": "Meeting Notes",
                    "simple": false,
                    "control_type": "textarea"
                },
                {
                    "key": "notify_users",
                    "label": "Guest Notifyees",
                    "simple": false,
                    "hide": true,
                    "control_type": "select"
                },
                {
                    "key": "booking_type",
                    "label": "Booking Type",
                    "simple": false,
                    "control_type": "dropdown",
                    "default": "internal",
                    "options": [
                        {
                            "id": "internal",
                            "name": "Internal (default)"
                        },
                        {
                            "id": "client",
                            "name": "Client"
                        },
                        {
                            "id": "external",
                            "name": "External"
                        },
                        {
                            "id": "interview",
                            "name": "Interview"
                        },
                        {
                            "id": "setup",
                            "name": "Setup"
                        },
                        {
                            "id": "training",
                            "name": "Training"
                        }
                    ]
                },
                {
                    "key": "notes",
                    "label": "Private Notes",
                    "description": "",
                    "control_type": "textarea"
                }
            ]
        }
    }
}
